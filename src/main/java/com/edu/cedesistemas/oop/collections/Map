package com.edu.cedesistemas.oop.collections;

public class Main {
    public static void main(String[] args) {
        System.out.println("Hello Java OOP!");

        List<Cicle> circles = new ArrayList<>();
        double ran;
        do {
            ran = new Random().nextDouble();
            circles.add(new Cricle(ran));
        } while (ran > 0.01);

        for (Circle circle : circles) {
            System.out.println(circle.area());
        }

    }